<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_bg_color"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:textSize="@dimen/title_font_size"
            android:textColor="@color/font_color"
            android:background="@color/slogan_bg_color"
            android:gravity="center"
            android:text="@string/about"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hr"
            android:background="@color/hr_color"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/slogan_padding_top"
            android:textSize="@dimen/slogan_font_size"
            android:textColor="@color/font_color"
            android:background="@color/slogan_bg_color"
            android:gravity="center"
            android:text="@string/slogan"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/slogan_name_split"
            android:paddingBottom="@dimen/slogan_padding_bottom"
            android:textColor="@color/font_color"
            android:background="@color/slogan_bg_color"
            android:gravity="center"
            android:text="@string/version"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/container_margin"
            android:textColor="@color/font_color"
            android:text="@string/description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/container_margin"
        android:gravity="right">
        <ImageButton
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@color/about_bg_color"
            android:src="@drawable/mail"
            android:onClick="btn_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@color/about_bg_color"
            android:src="@drawable/arrow_left"
            android:onClick="btn_return"/>
    </LinearLayout>
</RelativeLayout>
